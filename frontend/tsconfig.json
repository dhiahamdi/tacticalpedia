{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types",
            "src/typings.d.ts"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@fuse": [
                "@fuse/"
            ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": false,
        "strictInjectionParameters": false
    }
}
